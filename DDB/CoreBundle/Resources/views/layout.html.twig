{# src\DDB\CoreBundle\Resources\views\Core\layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="{{ _charset }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Bienvenue Au Domaine des Bougainvilliers{% endblock %}</title>
  {% block stylesheets %}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
    <link href="{{asset('css/style.css')}}" rel="stylesheet" type="text/css">
  {% endblock %}
</head>

<body {% if not is_granted('ROLE_ADMIN')%}
        style="
        background-image: url('/web/img/bg.jpg');
        background-repeat: no-repeat;
        background-position: left bottom;
        background-size: 100% 100%;"
        {% else %}
            style="background-color: gray;"
      {%endif%}>
    <div class="container">
    <div id="header" 
         class="jumbotron" 
         style="text-align: center;
         border-radius: 50px;
         background: inherit;"
         >
        <titre_principal>Bienvenue<br>au Domaine des Bougainvilliers</titre_principal>
        <p style="color:white">
        Location de studios dans la ville de Sainte-Rose
      </p>
      <div>
      <div style="margin-bottom: 10px; display: inline-block;vertical-align: top; height: 24px" class="fb-share-button" data-href="http://www.audomainedesbougainvilliers.com" data-layout="button"></div>
      <div style="display: inline-block" class="g-plusone" data-size="medium" data-annotation="none" data-href="http://www.audomainedesbougainvilliers.com"></div>
      <script type="in/share" ></script>
      <a href="http://twitter.com/share" data-count="none" class="twitter-share-button">Tweet</a>
      <a href="http://www.skyrock.com/m/blog/share.php?js=0" class="skysocial-s skyrocksocialshare_square24" title="Partager sur Skyrock" style="display:inline-block;text-indent:-999em;overflow:hidden;width:20px;height:20px;background:url(http://share.static.skyrock.net/img/api/skyrocksocialshare_square24.png) no-repeat 0 0 transparent;"><p style="display:none;">Partager sur Skyrock</p></a>
      <a href="http://profile.live.com/badge?url=http://www.audomainedesbougainvilliers.com" target="blank">
          <img src="http://upload.wikimedia.org/wikipedia/fr/2/21/Wlm_logo-ic.png" height="24" style="vertical-align: top" alt="Partager sur Messenger" />
    </a>
      </div>
      <div class="navigation">
		<nav class="navbar navbar">
			<div class="navbar-header">
				<a class ="navbar-brand " href ="#">  </a>
				<button style="background-color: #eee; opacity: 0.8;" type="button" class="navbar-toggle pull-left" style="color:whitesmoke;" data-toggle="collapse" data-target=".navbar-collapse">
					<h3 style="display:inline;"> Menu </h3>&nbsp; <span class="glyphicon glyphicon-menu-hamburger black pull-right" style="font-size:24px"></span>
				</button>
			</div>
			<div class ="collapse navbar-collapse" >
                            <ul class="nav navbar-nav degrade" id="nav" style="">
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_core_homepage') }}"> 
							Accueil 
						</a>
					</li>
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_reserv_homepage') }}"> 
							Tarifs 
						</a>
					</li>
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_core_geographie') }}">
							Plan d'accès
						</a>
					</li>
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_core_livredor') }}">
							Livre d'or
						</a>
					</li>
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_core_contact') }}">
							Contacts
						</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('ddb_admin_homepage') }}">
							Administration
						</a>
					</li>
					<li>
						<a class="btn btn-default btn-lg" href="{{ path('logout') }}">
							Déconnexion
						</a>
					</li>
                                    {% endif %}
				</ul>
			</div>
		</nav>
	  </div>
    </div>
      {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-info">
        {{ flashMessage }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">
        {{ flashMessage }}
    </div>
{% endfor %}
    <div class="row">
        {% block body %}
            {% endblock %}
      
    </div>

            <footer style="
                    margin-top: 20px;
                    text-align: center;
                    background-color: lightyellow;
                    border-radius: 20px;
                    word-wrap: break-word">
        {% render(path('cadmin')) %}
    </footer>
  </div>

  {% block javascripts %}
<script>
  (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.3";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
<script src="https://apis.google.com/js/platform.js" async defer>
{lang: 'fr'}
</script>
<script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
<script>(function(){var d=document,id='skyrock-fxlebpx'; if(d.getElementById(id)) return;var e=d.createElement('script');e.id=id;e.async=true;e.src='http://share.static.skyrock.net/js/skyrock_social.min.js';d.getElementsByTagName('body')[0].appendChild(e);}());</script>
<script type="text/javascript" src="http://platform.linkedin.com/in.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>