{# empty Twig template #}
{% extends "DDBCoreBundle::layout.html.twig" %}
{% block title %}
  Bungalow {{bungalow.numero}} - {{ parent() }}
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12 text-center" ><h2 style="color:whitesmoke; text-shadow: 2px 2px 2px #0034a6;">{{bungalow.nom}} / {{bungalow.tarif}}â‚¬ la nuit </h2></div>
    <div class="col-md-6">
        {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-default" href="{{path('bungalow_view',{'id':bungalow.id})}}">Modifier
                <i class="glyphicon glyphicon-edit"></i></a>
                    {% endif %}
                    <p class="well">{{bungalow.texte|nl2br}}</p>
    </div>
<div class="col-md-6">
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:100%;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  {% for photo in listePhotos %}
	<li data-target="#myCarousel" data-slide-to="{{loop.index-1}}" class="{% if loop.first %}active{% endif %}"></li>
  {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
  {% for photo in listePhotos %}
    <div class="item {% if loop.first %}active{% endif %}">
      <img src="{{ asset(photo.uploadDir~'/'~photo.url) }}" alt="{{ asset(photo.url) }}" style="width:100%;height: 550px;">
      <i class="carousel-caption">{{ photo.description|nl2br }}</i>
    </div>
  {% endfor %}
  </div>
  

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
				
				

</div>
    
				

{% endblock %}