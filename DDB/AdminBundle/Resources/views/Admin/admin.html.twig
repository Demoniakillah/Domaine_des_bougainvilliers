        {% if bungalows is defined %}
             <h3><i><u>Mes Bungalows</u></i></h3>

        {% for bungalow in bungalows %}
            <div class="col-lg-3 well">
                <a href="{{ path('bungalow_view', {'id': bungalow.id}) }}" class="btn btn-default" style="font-size: 16px; margin-bottom: 15px;">
                    <i class="glyphicon glyphicon-edit"></i>
                    {{ bungalow.nom }}
                </a>
                    <p><u><i>Résumé:</i></u><br> {{ bungalow.resume }}</p>
                    <p><i><u>Texte d'accroche:</u></i><br> {{ bungalow.texte }}</p>
